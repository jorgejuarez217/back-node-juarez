
<h3 style="margin:2rem 0;">  Mi Carrito:</h3>
{{#if productos}}
    
    <table class="table table-bordered border-dark" style="margin:3rem 0;">
        <thead class="thead-dark" style="background-color:aliceblue ;">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Cantidad</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}

                <tr scope="row" >
                    <td>
                            {{title}} 
                    </td>
                    <td>
                            {{price}}
                    </td>
                    <td>
                            {{cantidad}}   
                    </td>
                    <td>
                    <a href="/api/carrito/deleteproducto/{{_id}}"  class="btn btn-primary" >Eliminar</a> 
                    </td>
                </tr>  
            
            {{/each}}
        </tbody>
    </table>
    {{else }}
    <p style="color: red;">No hay ning√∫n producto :(</p>
{{/if}}

<a href="/api/carrito/checkout" class="btn btn-primary" >comprar</a> 